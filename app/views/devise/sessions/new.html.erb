<div class="container form_auth">
  <h2>Log In</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field email">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placholder: :email %>
    </div>

    <div class="field password">
      <%= f.password_field :password, autocomplete: "current-password", placholder: :password %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field remember_me">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
